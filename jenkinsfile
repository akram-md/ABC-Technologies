pipeline {
    agent any
    stages {
        stage('Task 1: Code Checkout (Clone)') {
            steps {
                git 'https://github.com/akram-md/ABC-Technologies'
            }
        }
        stage('Task 2: Code Compile (Build)') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Task 2: Unit Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Task 2: Code Package') {
            steps {
                sh 'mvn package'
            }
        }
    }
}
